<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.pms.falasantos.Atividades.SetupActivity">

  <TextView
      android:id="@+id/tvEscUser"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Escolha uma das opções:"
      android:textSize="20dp"
      android:textStyle="bold"/>

  <!-- grupo exclusivo funcionário/munícipe -->
  <RadioGroup
      android:id="@+id/rgEscUser"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/tvEscUser"
      android:orientation="vertical">

    <RadioButton
        android:id="@+id/rbFunc"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Funcionário ou terceiro da Prefeitura"/>

    <RadioButton
        android:id="@+id/rbMunic"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Munícipe"/>

  </RadioGroup>

  <!-- layout contendo a parte comum: horários, uso de banda/wifi confidencialidade -->
  <LinearLayout
      android:id="@+id/llComum"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/rgEscUser"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Horário de "/>

      <EditText
          android:id="@+id/txHrInic"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="time"
          android:minWidth="50dp"
          android:text="08:00"
          android:textSize="14sp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=" até "/>

      <EditText
          android:id="@+id/txHrFinal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="time"
          android:minWidth="50dp"
          android:text="21:00"
          android:textSize="14sp"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/ckWIFI"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="14sp"
        android:text="Não usar a Banda do Celular (Só WIFI)"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Questão: "/>

      <EditText
          android:id="@+id/txQuestao"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:minWidth="150dp"
          android:text=""
          android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Senha: "/>

      <EditText
          android:id="@+id/txSenhaConf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPassword"
          android:minWidth="100dp"
          android:textSize="14sp"
          android:text=""/>

    </LinearLayout>

  </LinearLayout>

  <!-- layout aplicado a possuidores de SSHD/Senha -->
  <LinearLayout
      android:id="@+id/llOptFunc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/llComum"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="SSHD: "/>

      <EditText
          android:id="@+id/txSSHD"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textVisiblePassword"
          android:textSize="14sp"
          android:minWidth="150dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Senha: "/>

      <EditText
          android:id="@+id/txSenha"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textPassword"
          android:textSize="14sp"
          android:minWidth="150dp"/>

    </LinearLayout>

  </LinearLayout>

  <!-- layout aplicado a não possuidores de SSHD/Senha -->
  <LinearLayout
      android:id="@+id/llOptMuni"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/llComum"
      android:orientation="vertical"
      android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nome: "/>

      <EditText
          android:id="@+id/txNome"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="textCapWords|textPersonName"
          android:minWidth="150dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Nascimento: "/>

      <EditText
          android:id="@+id/txDtNasc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="date"
          android:minWidth="150dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="CPF: "/>

      <EditText
          android:id="@+id/txCPF"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="number"
          android:minWidth="150dp"/>

    </LinearLayout>

  </LinearLayout>

  <!-- botões de ação final OK/Cancel -->
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:gravity="center_horizontal"
      android:orientation="horizontal">

    <Button
        android:id="@+id/btSetupOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick"
        android:text="OK"/>

    <Button
        android:id="@+id/btSetupCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick"
        android:text="Cancel"/>

  </LinearLayout>

</RelativeLayout>
